<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="Style_Default" TargetType="Control">
        <Setter Property="Margin" Value="5"/>
    </Style>
    
    <Style x:Key="Style_Title" TargetType="Label"
           BasedOn="{StaticResource Style_Default}">
        <Setter Property="FontSize" Value="25"/>
        <Setter Property="Foreground" Value="Brown"/>
    </Style>
    
    <Style x:Key="Style_Annotation" TargetType="TextBlock">
        <Setter Property="Foreground" Value="Blue"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>
    
    <Style x:Key="Style_Add" TargetType="Button"
           BasedOn="{StaticResource Style_Default}">
        <Setter Property="Width" Value="75"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background" Value="Blue"/>
    </Style>
</ResourceDictionary>